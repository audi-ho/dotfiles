set argtextobj
set surround
set sneak
set commentary
set NERDTree

let mapleader = ' '

inoremap jk <ESC>
inoremap Jk <ESC>
inoremap JK <ESC>
nnoremap ; :
nnoremap L $
nnoremap H ^

" Splits
nnoremap <leader>\\ :vsplit<CR>
nnoremap <leader>- :split<CR>
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

" NERDTree
nnoremap - :NERDTreeFind<CR>
nnoremap <leader>c :NERDTreeToggle<CR>

nnoremap [c :action GotoPreviousError<CR>
nnoremap ]c :action GotoNextError<CR>
nnoremap <leader>x :action MarkNotificationsAsRead<CR>
nnoremap <leader>r :action ChooseRunConfiguration<CR>
